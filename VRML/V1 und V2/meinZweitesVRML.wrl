#VRML V2.0 utf8

DEF Prisma Shape {
    geometry IndexedFaceSet {
        coord Coordinate {
            point [
                0 0 0,  # Punkt A
                1 0 0,  # Punkt B
                0 1 0,  # Punkt C
                0 0 1,  # Punkt D
                1 0 1,  # Punkt E
                0 1 1   # Punkt F
            ]
        }

        coordIndex [
            0 2 1 -1      # Dreieck ACB
            0 1 4 3 -1    # Viereck ABED
            1 2 5 4 -1    # Viereck BCFD
            2 0 3 5 -1    # Viereck CADF (ergänzt)
            3 4 5 -1      # Dreieck DEF (ergänzt)
        ]

        solid FALSE
    }

    appearance Appearance {
        material Material {
            diffuseColor 0 1 0
        }
    }
}

Transform {
    translation 0.5 0.5 0.5
    rotation 1 0 0 1.5708  # Rotiert den Kegel entlang der x-Achse um 90 Grad
    children [
        Shape {
            geometry Cone {
                bottomRadius 0.5
                height 1
            }

            appearance Appearance {
                material Material {
                    diffuseColor 1 0 0
                }
            }
        }
    ]
}